<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/raceInput"


        android:inputType="textPersonName"
        android:ems="10"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:padding="4dp"
        android:text=""
        android:hint="Select Race"
        android:layout_margin="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/classInput"
        android:layout_margin="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:padding="4dp"
        android:text=""
        android:hint="Select Class"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/raceInput" />

    <EditText
        android:id="@+id/subclassInput"
        android:layout_margin="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:padding="4dp"
        android:text=""
        android:hint="Select Subclass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classInput" />

    <EditText
        android:id="@+id/backgroundInput"
        android:layout_margin="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:padding="4dp"
        android:text=""
        android:hint="Select Background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subclassInput" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_margin="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundInput"/>


</androidx.constraintlayout.widget.ConstraintLayout>