<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <EditText
        android:id="@+id/backgroundInput"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_margin="24dp"
        android:ems="10"
        android:hint="Background"
        android:inputType="textPersonName"
        android:padding="4dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/levelInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.838" />

    <EditText
        android:id="@+id/levelInput"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_margin="24dp"
        android:ems="10"
        android:hint="Select Starting Level"
        android:inputType="number"
        android:padding="4dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.716" />

    <EditText
        android:id="@+id/characterNameInput"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_margin="24dp"
        android:ems="10"
        android:hint="Name Character"
        android:inputType="number"
        android:padding="4dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelInput" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner_races"
        android:layout_width="364dp"
        android:layout_height="70dp"
        android:hint="Select Race + Class"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/spinner_classes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.429" />

    <Spinner
        android:id="@+id/spinner_classes"
        android:layout_width="364dp"
        android:layout_height="56dp"
        android:layout_marginTop="124dp"
        android:hint="Select Class"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/backgroundInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.782" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="191dp"
        android:layout_height="26dp"
        android:layout_marginBottom="14dp"
        android:text="Select Race"
        app:layout_constraintBottom_toTopOf="@+id/spinner_races"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="205dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="34dp"
        android:text="Select Class"
        app:layout_constraintBottom_toTopOf="@+id/spinner_classes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_races" />


</androidx.constraintlayout.widget.ConstraintLayout>